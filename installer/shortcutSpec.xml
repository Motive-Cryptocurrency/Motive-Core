<shortcuts>
	<skipIfNotSupported/>
	<defaultCurrentUser/>
	<programGroup defaultName="Motive" location="startMenu"/>
	<shortcut
		name="Motive Server"
		target="$INSTALL_PATH\Motive.exe"
		commandLine=""
		workingDirectory="$INSTALL_PATH"
        description="Start Motive server"
		iconFile="$INSTALL_PATH\html\www\favicon.ico"
        iconIndex="0"
        initialState="normal"
        programGroup="yes"
		desktop="yes"
        applications="no"
        startMenu="no"
		startup="no"
		runAsAdministrator="true">
	</shortcut>	
	<shortcut
		name="Motive Wallet"
		target="http://localhost:37876/index.html"
		commandLine=""
		workingDirectory="$INSTALL_PATH"
        description="Launch Motive wallet in browser"
		iconFile="$INSTALL_PATH\html\www\favicon.ico"
        iconIndex="0"
        initialState="normal"
        programGroup="yes"
		desktop="yes"
        applications="no"
        startMenu="no"
		startup="no">
	</shortcut>	
